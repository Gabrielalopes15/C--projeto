#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>

void load() {
        printf(" _______________\n");
        printf("| Carregando.   |\n");
        printf("|_______________|\n");
        sleep(1);
        system("cls");
        printf(" _______________\n");
        printf("| Carregando..  |\n");
        printf("|_______________|\n");
        sleep(1);
        system("cls");
        printf(" _______________\n");
        printf("| Carregando... |\n");
        printf("|_______________|\n");
        sleep(1);
        system("cls");
    return;
}

int main(void) {
    load();
    return 0;
}
